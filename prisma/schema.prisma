generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  type        TemplateType
  content     String   @db.Text
  priority    Priority
  scope       Scope
  version     String   @default("1.0.0")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("templates")
}

enum TemplateType {
  architecture
  design
  development
  deployment
  structure
  tech
  guidelines
  progress
  plan
}

enum Priority {
  high
  medium
  low
}

enum Scope {
  project
  session
  system
}
